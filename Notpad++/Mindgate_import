-- Step 1: Create the tablespace BBPSBPROD
CREATE TABLESPACE BBPSCOUPAYUAT DATAFILE '/data/app/oracle/oradata/ORCL/BBPSCOUPAYUAT.dbf' SIZE 100M AUTOEXTEND ON NEXT 1G MAXSIZE UNLIMITED EXTENT MANAGEMENT LOCAL;

-- Step 2: Create the user BBPSBPROD and assign tablespaces
CREATE USER BBPSCOUPAYUAT IDENTIFIED BY BBPSCOUPAYUAT
DEFAULT TABLESPACE BBPSCOUPAYUAT
TEMPORARY TABLESPACE TEMP;

-- Step 3: Grant required privileges to BBPSBPROD
GRANT CREATE SESSION TO BBPSCOUPAYUAT; 
GRANT CREATE TABLE TO BBPSCOUPAYUAT;  

-- Step 4: Grant quota on BBPSBPROD tablespace
ALTER USER BBPSCOUPAYUAT QUOTA UNLIMITED ON BBPSCOUPAYUAT;

-- (Optional) Grant additional roles or privileges
GRANT CONNECT, RESOURCE TO BBPSCOUPAYUAT; 

